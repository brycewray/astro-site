---
import Head from '@components/Head.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'

let title = 'Page not found | BryceWray.com'
let description = 'Page not found.'
---

<style lang="scss">
  @use '../styles/variables' as var; // SCSS partial
  .FourOhFour {
    text-align: center;
    margin-right: auto;
    margin-left: auto;
    h1 {
      font-size: var.$biggest;
      margin-top: 5rem;
      margin-bottom: 3rem;
      @media screen and (min-width: var.$bkpt_lg) {
        font-size: 3.25rem;
      }
      @media screen and (min-width: var.$bkpt_xl) {
        font-size: 3.5rem;
      }
    }
    p {
      font-size: var.$slightlybig;
    }
    .bottom {
      margin-bottom: 10em;
    }
  }

</style>

<html lang="en">
	<head>
		<Head {title} {description} />
	</head>

	<body>
		<Header />
		<div class="wrapper">
			<main class="content">
        <div class="FourOhFour">
          <h1>Page not found</h1>
          <p>Sorry, that page isn&rsquo;t on this&nbsp;site.</p>
          <p class="bottom">Please use the navigation menu or the&nbsp;<a href="/sitemap/">sitemap</a> to&nbsp;find another&nbsp;page.</p>
        </div>
			</main>
		</div>
    <Footer />
	</body>
</html>
