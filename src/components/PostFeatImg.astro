---
import { format } from "date-fns"
import Imgc from '@components/Imgc.astro'

const { title, featured_image, featured_image_alt, featured_image_width, featured_image_height, featured_image_caption, description, date, lastmod } = Astro.props;
---

<style lang="scss">
  @use '../styles/variables' as var; // SCSS partial
  .background-hero {
    &-div {
      position: relative;
      height: 100%;
      background-color: black;
    }
    &-image-div {
      position: relative;
      overflow: hidden;
      width: 100%;
      height: 85vh;
      max-height: 85vh;
      min-height: 85vh;
      @media screen and (min-width: var.$bkpt_md) {
        height: 90vh;
        max-height: 90vh;
        min-height: 90vh;
      }
      @media screen and (min-width: var.$bkpt_xl) {
        height: 100vh;
        max-height: 100vh;
        min-height: 100vh;
      }
    }
    &-title-block-fit {
      display: block;
      width: 100%;
      position: absolute;
      bottom: 0;
    }
    &-title-block {
      display: block;
      width: 100%;
      position: absolute;
      bottom: 0;
      padding: 5em 2em 1.5em 2em;
      background: linear-gradient(
        transparent,
        rgba(0,0,0,.75) 80%,
        #000
      );
      @media screen and (min-width: var.$bkpt_xl) {
        padding-bottom: 5%;
      }
    }
    &-title-text, &-subtitle-text, &-description-text {
      // font-family: var.$sans-serif;
      color: #fff;
      margin: 0 auto;
      text-shadow: 4px 4px 2px #000;
      text-align: center;
      letter-spacing: -0.025em;
      padding: 0.25em;
      @media screen and (min-width: var.$bkpt_lg) {
        text-align: left;
      }
      @media screen and (min-width: var.$bkpt_xl) {
        text-align: left;
      }
    }
    &-title-text {
      font-size: 2.25em;
      font-weight: 800;
      @media screen and (prefers-color-scheme: dark) {
        font-weight: 750;
      }
      letter-spacing: -0.0375em;
      line-height: 1.1;
      padding-top: 0.5em;
      padding-bottom: 1rem;
      @media screen and (min-width: var.$bkpt_md) {
        font-size: 3em;
      }
      @media screen and (min-width: var.$bkpt_lg) {
        font-size: 3.5em;
        padding-left: 5%;
        padding-right: 5%;
      }
      @media screen and (min-width: var.$bkpt_xl) {
        padding-top: 0;
        font-size: 4em;
      }
    }
    &-subtitle-text {
      font-size: 2em;
      line-height: 1.1;
      padding-top: 0;
      padding-bottom: 1.5rem;
      // font-style: italic;
      @media screen and (min-width: var.$bkpt_md) {
        font-size: 2em;
      }
      @media screen and (min-width: var.$bkpt_lg) {
        font-size: 2.5em;
        padding-left: 5%;
        padding-right: 5%;
      }
      @media screen and (min-width: var.$bkpt_xl) {
        font-size: 3em;
      }
    }
    &-description-text {
      // display: none; // appears only on wider screens
      font-family: var.$sans-serif;
      font-size: 1rem;
      letter-spacing: -0.01em;
      line-height: 1.4;
      @media screen and (min-width: var.$bkpt_md) {
        // display: block;
        font-size: 1.25rem;
      }
      @media screen and (min-width: var.$bkpt_lg) {
        font-size: 1.5rem;
        letter-spacing: -0.025em;
        margin-bottom: 1em;
        padding-top: 0.25em;
        padding-right: 15%;
        padding-left: 5%;
      }
      @media screen and (min-width: var.$bkpt_2xl) {
        font-size: 1.75rem;
      }
      @media screen and (min-width: var.$bkpt_3xl) {
        font-size: 2rem;
      }
    }
    &-p-text {
      // font-family: var.$sans-serif;
      font-size: 1rem;
      line-height: 1.25;
      padding-top: 1rem;
      // padding-bottom: 0.5em;
      color: #fff;
      text-shadow: 4px 4px 2px #000;
      text-align: center;
      @media screen and (min-width: var.$bkpt_md) {
        font-size: 1.25rem;
        line-height: 1.175;
      }
      @media screen and (min-width: var.$bkpt_lg) {
        font-size: 1.375rem;
        line-height: 1.1;
        text-align: right;
        padding-top: 0;
        padding-right: 5%;
      }
    }
  }
/*
== The styling for the image caption has to be with the post's styling,
**not** with the PostFeatImg.astro styling, because it styles HTML that
is fed directly from the post's front matter.
(At least, that's what I think as of now.)
---2022-04-29-0942CDT
*/

</style>

<div class="background-hero-image-div">
  <div class="background-hero-div">
    <Imgc
      url={featured_image}
      alt={featured_image_alt}
      width={featured_image_width}
      height={featured_image_height}
      tmpl="posts"
    />
  </div>
  <div class="background-hero-wrapper-div">
    <div class="background-hero-title-block">
      <h1 class="background-hero-title-text">{title}</h1>
      <p class="background-hero-description-text">{description}</p>
      <p class="background-hero-p-text">
        <strong>{format(new Date(date), "MMMM d, yyyy")}</strong><br />
        {lastmod && (
          <span class="pokey">Last modified {format(new Date(lastmod), "MMMM d, yyyy")}</span>
        ) || (
          <span class="pokey">&nbsp;</span>
        )}
      </p>
      <p class="featured-image-caption">
        {featured_image_caption && (
          <span>
            <Fragment set:html={featured_image_caption} />
          </span>
        ) || (
          <span>&nbsp;</span>
        )}
      </p>
    </div>
  </div>
</div>
